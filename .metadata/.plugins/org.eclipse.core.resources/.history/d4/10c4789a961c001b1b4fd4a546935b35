#include <iostream>
#include <fstream>
#include <string>
using namespace std;

#include "Hash.hpp"
#include "Employee.hpp"



int main() {

	// Hash table
	Hash table;

	//File stream variable.
	ifstream file;
	file.open("Employees.txt");
	if (file.is_open())
	{
		Employee* t = nullptr;
		while (!file.eof())
		{
			t = new Employee;

			file >> t->id;
			file >> t->last_name;
			file >> t->first_name;
			file >> t->salary;

			cout << "ID:         " << t->id << endl
				 << "Last Name:  " << t->last_name << endl
				 << "First Name: " << t->first_name << endl
				 << "Salary:     " << t->salary << endl;

			table.Insert(t->id, t);
		}

	}
	else
	{
		cout << "File did not open..." << endl;
	}
	file.close();

	table.PrintList();
	//table.PrintCollisionCount();

	cout << "Program ending." << endl; // prints !!!Hello World!!!
	return 0;
}






