#include <iostream>
#include <fstream>
#include <string>
using namespace std;

#include "Hash.hpp"
#include "Employee.hpp"

void loadFile(string, Hash);

int main() {
	cout << "1\n";
	// Hash table
	Hash table;

	loadFile("Employees.txt", table);




	//table.PrintList();
	cout << "5\n";
	table.PrintCollisionCount();

	cout << "Program ending." << endl; // prints !!!Hello World!!!
	return 0;
}

void loadFile(string filename, Hash inTable)
{
	//File stream variable.
	ifstream file;
	file.open("Employees.txt");
	if (file.is_open())
	{
		cout << "2\n";
		Employee* t = nullptr;
		while (!file.eof())
		{
			t = new Employee;

			file >> t->id;
			file >> t->last_name;
			file >> t->first_name;
			file >> t->salary;

			inTable.Insert(t->id, t);
		}

		cout << "3\n";
	}
	else
	{
		cout << "4\n";
		cout << "File did not open..." << endl;
	}
	file.close();
}






