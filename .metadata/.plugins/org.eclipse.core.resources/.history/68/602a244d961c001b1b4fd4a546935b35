#include <iostream>
#include <fstream>
#include <string>
using namespace std;

#include "Hash.hpp"
#include "Employee.hpp"



int main() {

	// Hash table
	Hash table;

	//File stream variable.
	ifstream file;
	file.open("Employees.txt");
	if (file.is_open())
	{
		Employee* t = nullptr;
		while (!file.eof())
		{
			t = new Employee;

			file >> t->id;
			file >> t->last_name;
			file >> t->first_name;
			file >> t->salary;

			table.Insert(t->id, t);
		}

	}
	else
	{
		cout << "File did not open..." << endl;
	}
	file.close();

	for (int i=0; i<TABLE_SIZE; i++)
	{
		for (int j=0; j<HASH_SIZE; j++)
		{
			cout << table[i][j] << endl;
		}
	}

	//table.PrintCollisionCount();

	cout << "Program ending." << endl; // prints !!!Hello World!!!
	return 0;
}






